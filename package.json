{
	"name": "aditya-portfolio",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "npm run build:content && vite",
		"dev:watch": "concurrently \"npm:watch:content\" \"vite\"",
		"watch:content": "tsx scripts/generate-content.ts --watch",
		"build": "npm run lint && npm run build:content && tsc --noEmit && vite build",
		"build:content": "tsx scripts/generate-content.ts",
		"lint": "biome check .",
		"format": "biome format --write .",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:functions": "vitest run functions --config vitest.config.functions.ts",
		"test:a11y": "node scripts/run-a11y.mjs",
		"test:lh": "npm run build && node scripts/run-lighthouse.mjs",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/workers-types": "^4.20241018.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@types/js-yaml": "^4.0.9",
		"@types/markdown-it": "^14.1.2",
		"@types/node": "^22.10.1",
		"@vitest/coverage-v8": "^4.0.4",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.1.0",
		"fast-glob": "^3.3.3",
		"gray-matter": "^4.0.3",
		"js-yaml": "^4.1.0",
		"markdown-it": "^14.1.0",
		"miniflare": "^4.20241018.0",
		"pa11y-ci": "^4.0.1",
		"playwright": "^1.49.1",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.19.1",
		"typescript": "~5.9.3",
		"vite": "^7.1.7",
		"vitest": "^4.0.4",
		"wrangler": "^4.45.1"
	},
	"dependencies": {
		"axe-core": "^4.10.0",
		"date-fns": "^4.1.0",
		"fuse.js": "^7.1.0",
		"slugify": "^1.6.6"
	}
}
